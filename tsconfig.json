{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2016", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false
  },
  "include": [
    "./src/**/*.ts"
  ]
}
